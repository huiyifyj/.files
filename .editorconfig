# EditorConfig

# Top-most EditorConfig file
root = true

# General settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{*.yml, package.json}]
indent_style = space
indent_size = 2
