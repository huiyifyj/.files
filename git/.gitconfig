[color]
    ui = true
    diff = auto
    branch = auto
    status = auto
    interactive = auto

[alias]
    # View the current working tree status using the short format
    s = status -s
    # Create tag with gpgsign
    t = tag -s
    # Display log information with graph and color
    g = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[core]
    # Use custom `.gitignore` and `.gitattributes`
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    editor = vim
    # setting for windows os
    # autocrlf = false
    # safecrlf = true

[commit]
    gpgsign = true

